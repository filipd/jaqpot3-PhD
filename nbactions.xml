            <actionName>CUSTOM-buiild (skip tests)</actionName>
            <displayName>buiild (skip tests)</displayName>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-build and clean without tests</actionName>
            <displayName>build and clean without tests</displayName>
            <goals>
                <goal>install;</goal>
                <goal>clean:clean</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>build</actionName>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
    </actions>
